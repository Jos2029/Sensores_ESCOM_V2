<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para regresar al menú principal -->
        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar al Menú"
            android:layout_gravity="start"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Estado del servidor -->
        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estado: Desconectado"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor del mapa -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@android:color/darker_gray" />

        <!-- Mostrar posición del jugador -->
        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posición: (0, 0)"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Controles de movimiento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Botón Norte -->
            <Button
                android:id="@+id/btnNorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▲"
                android:backgroundTint="#00FF00"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Botones Oeste, Interacción y Este -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnWest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="◀"
                    android:backgroundTint="#FFFF00"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnInteract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:backgroundTint="#FFA500"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnEast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:backgroundTint="#0000FF"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Botón Sur -->
            <Button
                android:id="@+id/btnSouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▼"
                android:backgroundTint="#FF00FF"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Controles de zoom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnZoomIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="#008000"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnZoomOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:backgroundTint="#800000"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Botones para iniciar servidor y conectar a dispositivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStartServer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar Servidor"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConnectToDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conectar a Dispositivo"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
